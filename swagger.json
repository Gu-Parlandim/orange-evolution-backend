{
  "openapi": "3.0.0",
  "info": {
    "title": "Orange evolution",
    "description": "Documentação detalhada de todas as rotas da api do orange evolution",
    "version": "1.0.0"
  },
  "basePath": "/",
  "servers": [
    {
      "url": "http://localhost:3000/api-docs",
      "description": "API de test"
    },
    {
      "url": "https://squad-29-evolution.herokuapp.com/api-docs/",
      "description": "API de produção"
    }
  ],
  "paths": {
    "/category/create": {
      "post": {
        "description": "Rota que faz a criação de uma nova categoria.",
        "sumary": "Criação de uma categoria.",
        "tags": ["Category"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "name",
            "in": "body",
            "description": "nome da nova categoria.",
            "required": "true"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Category"
              },
              "examples": {
                "category": {
                  "value": {
                    "name": "Fullstack"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK!",
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/Category"
                  }
                }
              }
            }
          },
          "500": {
            "description": "error"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/category/{id}": {
      "get": {
        "description": "Rota que faz a busca por uma única categoria.",
        "sumary": "Busca por uma categoria.",
        "tags": ["Category"],

        "parameters": [
          {
            "id": "id",
            "in": "params",
            "description": "id da categoria para busca",
            "required": "true"
          }
        ],
        "responses": {
          "200": "ok",
          "500": "error"
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Category": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "Users": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Trails": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "hours": {
            "type": "Int"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "Contents": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "link": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "trail_id": {
            "type": "Int"
          },
          "category_id": {
            "type": "Int"
          }
        }
      },
      "UserTrails": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "string"
          },
          "trail_id": {
            "type": "Int"
          }
        }
      }
    }
  }
}
